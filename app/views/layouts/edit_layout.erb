<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/shim' %>
    <%= render 'layouts/rails_default' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <% flash.each do |key,msgs| %>
         <div class="alert alert-<%= key %>"> 
            <% msgs.each do |msg| %>
              <%= msg.html_safe %>
            <% end %>
         </div>
    <% end %>
    <div class="container">
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>